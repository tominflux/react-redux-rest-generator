{
  "compilerOptions": {
    "target": "es6",
    "experimentalDecorators": true, 
    "emitDecoratorMetadata": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "desc.d.ts"
, "jest.setup.js", "features/ui/components/styledSelector/index.test.js", "test/pages/[lang]/demo/index.test.js"  ],
  "exclude": [
    "node_modules"
  ]
}
